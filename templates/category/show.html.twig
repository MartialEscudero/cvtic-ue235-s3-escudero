{% extends 'base.html.twig' %}

{% block title %}Catégorie - {{ category.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="container">
            <h1 class="text-center mb-5">Catégorie</h1>
            <table class="table table-striped table-bordered mb-5">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nom</th>
                    </tr>
                    <tbody>
                        <tr>
                            <th scope="row">{{ category.id }}</th>
                            <td>{{ category.name }}</td>
                        </tr>
                    </tbody>
                </thead>
            </table>
        </div>
        <div class="col-lg-6 mb-5 text-center">
            <a class="btn btn-secondary btn-sm" href="{{ path('category_index') }}">Retour <i class="fas fa-undo-alt"></i></a>
        </div>
        <div class="col-lg-6 mb-5 text-center">
            <a class="btn btn-secondary btn-sm" href="{{ path('category_edit', {'id': category.id}) }}">Modifier <i class="fas fa-edit"></i></a>
        </div>
    </div>
</div>
{{ include('category/_delete_form.html.twig') }}
{% endblock %}
